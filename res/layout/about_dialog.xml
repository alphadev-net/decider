<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/about_image"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon" />
    <LinearLayout
            android:layout_toEndOf="@id/about_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <TextView
            android:id="@+id/about_name"
            android:text="@string/about_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/about_mail"
            android:text="@string/about_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/about_http"
            android:text="@string/about_http"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/separator" />
        <TextView
            android:id="@+id/about_icon_link"
            android:text="@string/icon_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
