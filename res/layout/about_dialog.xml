<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/aboutLayout" >
    <ImageView
        android:id="@+id/about_image"
        style="@style/aboutPicture"
        android:src="@+drawable/icon" />
    <LinearLayout
        style="@style/aboutSubLayout" >
        <TextView
            android:id="@+id/about_name"
            android:text="@+string/about_name"
            style="@style/wrapfill.about" />
        <TextView
            android:id="@+id/about_mail"
            android:text="@+string/about_mail"
            style="@style/wrapfill.about.Click" />
        <TextView
            android:id="@+id/about_http"
            android:text="@+string/about_http"
            style="@style/wrapfill.about.Click" />
    </LinearLayout>
</LinearLayout>